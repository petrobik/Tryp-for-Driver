<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/trip_accent_color</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="ThemeMaterial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/trip_accent_color</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="LocationBtnStyle">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:src">@drawable/ic_location</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="StopBtnStyle" parent="LocationBtnStyle">
        <item name="android:src">@drawable/ic_stop</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/trip_accent_color</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="AppTheme.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:maxHeight">34dp</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#E0E0E0</item>
    </style>

    <style name="TextAppearance.NavigationDrawer" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4F4F4F</item>


    </style>

    <style name="TextAppearance.Tabs" parent="TextAppearance.MaterialComponents.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>


</resources>
